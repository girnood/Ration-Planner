generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [postgis(schema: "public")]
}

enum UserRole {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum ProviderStatus {
  PENDING
  APPROVED
  REJECTED
}

enum VehicleType {
  FLATBED
  WHEEL_LIFT
}

enum OrderStatus {
  SEARCHING
  ACCEPTED
  ARRIVED
  IN_PROGRESS
  COMPLETED
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  role      UserRole @default(CUSTOMER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  providerProfile ProviderProfile?
  customerOrders  Order[] @relation("CustomerOrders")
  driverOrders    Order[] @relation("DriverOrders")
}

model ProviderProfile {
  id              String                              @id @default(uuid())
  userId          String                              @unique
  vehicleType     VehicleType
  plateNumber     String
  status          ProviderStatus                      @default(PENDING)
  currentLocation Unsupported("geography(Point,4326)")
  isOnline        Boolean                             @default(false)
  lastPingAt      DateTime?
  createdAt       DateTime                             @default(now())
  updatedAt       DateTime                             @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([isOnline])
}

model Order {
  id             String      @id @default(uuid())
  customerId     String
  driverId       String?
  pickupLat      Float
  pickupLng      Float
  dropoffLat     Float
  dropoffLng     Float
  priceEstimated Decimal     @db.Decimal(10, 3)
  distanceKm     Decimal?    @db.Decimal(10, 3)
  status         OrderStatus @default(SEARCHING)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  expiresAt      DateTime?

  customer User  @relation("CustomerOrders", fields: [customerId], references: [id])
  driver   User? @relation("DriverOrders", fields: [driverId], references: [id])

  @@index([customerId])
  @@index([driverId])
  @@index([status, createdAt])
}
